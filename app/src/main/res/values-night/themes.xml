<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IPOAlerts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="CollapsingToolbarLayoutTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:text">@color/black</item>
    </style>
    <!-- Card View-->
    <style name="CardBackground" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        <item name="android:background">@color/grey</item>-->
        <item name="backgroundColor">@color/gold</item>
        <item name="android:background">@drawable/card_gradient_night</item>
    </style>

    <style name="CardImageBackground" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="LinkText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/gold</item>
    </style>


</resources>